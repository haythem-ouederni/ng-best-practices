{
  "name": "angular-best-practices-example",
  "version": "0.0.0",
  "scripts": {
    "ng": "ng",
    "start": "ng serve",
    "start:connection": "ng serve connection-standalone",
    "start:aot": "ng serve --aot",
    "build": "ng build",
    "build:prod": "ng build --prod --base-href /",
    "test": "yarn test:all",
    "test:all": "jest",
    "test:all:watch": "yarn test:all --watch",
    "test:connection": "jest --config general/confs/jest/jest.connection.config.js",
    "test:connection:watch": "yarn test:connection --watch",
    "lint": "ng lint",
    "lint:fix": "yarn lint --fix",
    "e2e": "ng e2e",
    "lintstaged": "lint-staged",
    "commit": "git-cz",
    "prod": "yarn lint && yarn test:all && yarn build:prod",
    "ts-jest": "ts-jest"
  },
  "husky": {
    "hooks": {
      "pre-commit": "yarn lintstaged",
      "pre-push": "yarn prod"
    }
  },
  "config": {
    "commitizen": {
      "path": "node_modules/cz-customizable"
    }
  },
  "private": true,
  "dependencies": {
    "@angular/animations": "~7.2.0",
    "@angular/common": "~7.2.0",
    "@angular/compiler": "~7.2.0",
    "@angular/core": "~7.2.0",
    "@angular/forms": "~7.2.0",
    "@angular/platform-browser": "~7.2.0",
    "@angular/platform-browser-dynamic": "~7.2.0",
    "@angular/router": "~7.2.0",
    "core-js": "^2.5.4",
    "rxjs": "~6.3.3",
    "tslib": "^1.9.0",
    "zone.js": "~0.8.26"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "~0.13.0",
    "@angular-devkit/build-ng-packagr": "~0.13.0",
    "@angular/cli": "~7.3.1",
    "@angular/compiler-cli": "~7.2.0",
    "@angular/language-service": "~7.2.0",
    "@types/jest": "^24.0.2",
    "@types/node": "~8.9.4",
    "codelyzer": "~4.5.0",
    "commitizen": "^3.0.5",
    "cz-customizable": "^5.3.0",
    "husky": "^1.3.1",
    "jasmine-core": "~2.99.1",
    "jasmine-spec-reporter": "~4.2.1",
    "jest": "^24.1.0",
    "jest-preset-angular": "^6.0.2",
    "lint-staged": "^8.1.3",
    "ng-packagr": "^4.2.0",
    "ngx-speculoos": "^1.1.0",
    "prettier": "^1.16.4",
    "protractor": "~5.4.0",
    "ts-jest": "^24.0.0",
    "ts-node": "~7.0.0",
    "tsickle": ">=0.34.0",
    "tslib": "^1.9.0",
    "tslint": "~5.11.0",
    "typescript": "~3.2.2"
  }
}
